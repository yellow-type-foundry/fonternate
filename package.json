{
  "name": "fonternate",
  "version": "1.1.0",
  "description": "A Chrome extension for testing custom fonts on live websites",
  "main": "index.js",
  "scripts": {
    "build": "node increment-version.js && tsc && webpack --mode production && cp manifest.json popup.html dist/ && cp icon*.png dist/ && cp src/popup/*.svg dist/ 2>/dev/null || true && cp -r src/popup/assets dist/ 2>/dev/null || true",
    "watch": "node watch-build.js",
    "dev": "webpack --mode development --watch",
    "dev:ui": "webpack serve --config webpack.dev.js",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "rebuild": "npm run clean && npm run build"
  },
  "keywords": ["chrome-extension", "fonts", "typography", "testing"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/chrome": "^0.0.254",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1",
    "html-webpack-plugin": "^5.5.3",
    "ts-loader": "^9.5.1",
    "css-loader": "^6.8.1",
    "style-loader": "^3.3.3",
    "tailwindcss": "^3.3.6",
    "autoprefixer": "^10.4.16",
    "postcss-loader": "^7.3.3"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
} 